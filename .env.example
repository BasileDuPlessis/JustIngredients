# Environment variables for JustIngredients Telegram Bot

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Your Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# PostgreSQL database connection string
DATABASE_URL=postgresql://username:password@localhost/ingredients

# =============================================================================
# OPTIONAL - HEALTH & METRICS
# =============================================================================

# Port for health check server (default: 8080)
HEALTH_PORT=8080

# Port for Prometheus metrics server (default: 9090)
METRICS_PORT=9090

# Optional authentication token for metrics endpoint (leave empty for no auth)
METRICS_AUTH_TOKEN=

# =============================================================================
# OPTIONAL - DATABASE CONFIGURATION
# =============================================================================

# Maximum database connections (default: 10, max: 100)
DATABASE_MAX_CONNECTIONS=10

# Database connection timeout in seconds (default: 30, max: 300)
DATABASE_CONNECT_TIMEOUT_SECS=30

# =============================================================================
# OPTIONAL - HTTP CLIENT
# =============================================================================

# HTTP client timeout in seconds (default: 30, max: 300)
HTTP_CLIENT_TIMEOUT_SECS=30

# =============================================================================
# OPTIONAL - SECURITY
# =============================================================================

# Allow binding to privileged ports (< 1024) (default: false)
ALLOW_PRIVILEGED_PORTS=false

# =============================================================================
# OPTIONAL - OBSERVABILITY & LOGGING
# =============================================================================

# Environment name (development/staging/production) (default: "development")
ENVIRONMENT=development

# OpenTelemetry collector endpoint for traces (optional)
OTLP_ENDPOINT=http://localhost:4317

# Log level for observability components (default: "info")
OBSERVABILITY_LOG_LEVEL=info

# Log format ("json" or "pretty") (default: "json")
LOG_FORMAT=json

# Enable trace sampling (default: false)
ENABLE_TRACE_SAMPLING=false

# Trace sampling ratio 0.0-1.0 (default: 1.0)
TRACE_SAMPLING_RATIO=1.0

# Enable metrics export to external Prometheus (default: true)
ENABLE_METRICS_EXPORT=true

# =============================================================================
# OPTIONAL - SERVICE METADATA
# =============================================================================

# Service version for metrics/tags (optional)
SERVICE_VERSION=1.0.0

# Hostname for metrics/tags (optional)
HOSTNAME=
